#include <stdio.h>

#define row0 {mat[0][1], mat[0][2]}
#define row1 {mat[1][1], mat[1][2]}
#define row2 {mat[2][1], mat[2][2]}

int det2(int mat[2][2])
{
	return mat[0][0] * mat[1][1] - mat[0][1] * mat[1][0];
}

int det3(int mat[3][3])
{
	return mat[0][0] * det2({row1 , row2}) - mat[0][1] * det2({row0, row2}) + mat[0][2] * det2({row0,  row1});
}

int main()
{
	det3({{2, 5, 3}, {4, 8, 9}, {6, 7, 1}});
	return 0;
}	